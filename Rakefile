# Rakefile
require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('parent_resource', '0.1.0') do |p|
  p.description    = "Infers a \"parent\" resource for nested resources from the url path."
  p.url            = "http://github.com/stevegraham/parent_resource"
  p.author         = "Steve Graham"
  p.email          = "sjtgraham@mac.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end